function start_msg() {
	echo "[>] $@..."
}

function success_msg() {
	echo "[*] ${1-done}"
}

function error_msg() {
	echo "[X] $@"
}

function warning_msg() {
	echo "[!] $@"
}

function info_msg() {
	echo "[ ] $@
}

function die() {
	error_msg $@
	exit 1
}

function prompt() {
	echo -n "$@ "
	read INPUT
}
